<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Soccer_App.Themes.DarkTheme">
    <Style x:Key="PageStyle" TargetType="Page">
        <Setter x:Name="PageBackground" Property="BackgroundColor" Value="#000000" />
    </Style>
    <Style x:Key="LabelPrimary" TargetType="Label">
        <Setter x:Name="TextColorPrimary" Property="TextColor" Value="White" />

    </Style>
    <Style x:Key="StackPrimary" TargetType="StackLayout">
        <Setter x:Name="BackgroundPrimary" Property="Background" Value="#262323" />
    </Style>
    <Style x:Key="FramePrimary" TargetType="Frame">
        <Setter x:Name="BackgroundPrimary" Property="Background" Value="#262323" />
    </Style>
    <Style x:Key="EntryPrimary" TargetType="Entry">
        <Setter x:Name="BackgroundPrimary" Property="PlaceholderColor" Value="#FFFFFF" />
    </Style>
    <Color x:Key="FrameBackgroundColorPrimary" >
        #85929E
    </Color>
    <Color x:Key="ColorSecondary" >
        #85929E
    </Color>
</ResourceDictionary>

